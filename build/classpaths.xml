<!-- path for jakarta jar files -->
<path id="jakarta.tomcat.classpath">
    <fileset dir="${jakarta.tomcat.dir}/lib">
        <include name="tomcat*.jar"/>
        <include name="catalina*.jar"/>
    </fileset>
</path>

        <!-- path for jakarta jar files -->
<path id="jakarta.classpath">
    <fileset dir="${jakarta.dir}">
        <include name="*/*.jar"/>
        <include name="*/*.zip"/>
    </fileset>
    <path refid="jakarta.tomcat.classpath"/>
</path>

